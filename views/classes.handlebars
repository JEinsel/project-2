        type="video/webm">
</video>

{{> frontend.nav}}

{{!-- about us --}}
<section class="container-fluid d-flex py-5 justify-content-center align-items-center my-5">
    <div class="container">
        {{#each results}}
        <div class="row my-5">
            <div class="col-md-4">
                <h3 class="text-left text-orange">{{name}}</h3>
            </div>
            <div class="col-md-8">
                <p>{{description}}</p>
                <p>{{duration}}</p>
                <p>{{intensity}}</p>
                <p>{{price}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</section>
{{!-- slogan --}}
<section class="container-fluid d-flex p-2 justify-content-end align-items-center vh-100" id="call-for-action">
    <div class="container  text-center">
        <h2>Happier, healthier you</h2>
        <h1 class="display-1 py-4">
            <small>for only</small> $9.99 <small>per month</small>
        </h1>
        <button class="btn hvr-radial-in btn-lg">Join Today!</button>
    </div>
</section>
{{> frontend.footer}}