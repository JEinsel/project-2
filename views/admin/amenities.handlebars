<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="#">{{ title }}</a>
  </li>
  <li class="breadcrumb-item active">Overview</li>

</ol>
<!-- Amenities list -->
<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Amenities
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Photo</th>
            <th>Premium</th>
            <th>Manage</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Photo</th>
            <th>Premium</th>
            <th>Manage</th>
          </tr>
        </tfoot>
        <tbody>
          {{#each results}}
          <tr>
            <td>{{ id }}</td>
            <td>{{ name }}</td>
            <td>{{ description }}</td>
            <td><img src="{{ photo }}" class="img-fluid"></td>
            <td>{{ premium }}</td>
            <td><a class="btn btn-dark ml-4" href="/admin/amenities/{{ id }}">Manage</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

<!-- Add new  -->
<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Add New Amenity
  </div>
  <div class="card-body">
    <form name="amenities_form" action="/admin/amenities" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="amenity_name" aria-describedby="nameHelp" required>
        <small id="nameHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" class="form-control"  id="amenity_description" aria-describedby="descriptionHelp" required></textarea>
        <small id="descriptionHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="name">Photo</label>
        <input type="text" name="amenity_photo" class="form-control" id="amenity_photo" aria-describedby="photoHelp" required>
        <small id="photoHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="premium">Premium?</label>
        <select name="premium" id="premium" class="form-control" aria-describedby="premiumHelp">
          <option value="0" selected>No</option>
          <option value="1">Yes</option>
        </select>
        <small id="premiumHelp" class="form-text text-muted"></small>
      </div>
      <button type="submit" id="create_amenity" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>